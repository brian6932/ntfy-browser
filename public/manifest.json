{
  "manifest_version": 3,
  "name": "ntfy browser extension",
  "description": "A ntfy browser extension to receive notifications without having the page open",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": {
      "16": "ntfy-16.png",
      "32": "ntfy-32.png",
      "64": "ntfy-64.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
